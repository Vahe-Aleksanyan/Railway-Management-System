@model RailwayManagementSystem.Models.City

@{
    ViewData["Title"] = "Edit City";
}

<h1>Edit City</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" name="CityID" value="@Model.CityID" />

            <div class="form-group">
                <label for="CityName" class="control-label">City Name</label>
                <input id="CityName" name="CityName" class="form-control" value="@Model.CityName" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Longitude" class="control-label">Longitude</label>
                <input id="Longitude" name="Longitude" class="form-control" value="@Model.Longitude" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Latitude" class="control-label">Latitude</label>
                <input id="Latitude" name="Latitude" class="form-control" value="@Model.Latitude" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Population" class="control-label">Population</label>
                <input id="Population" name="Population" class="form-control" value="@Model.Population" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="IsCapital" class="control-label">Is Capital</label>
                <input id="IsCapital" name="IsCapital" class="form-control" type="checkbox" value="true" @(Model.IsCapital ? "checked" : "") />
                <span asp-validation-for="IsCapital" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CountryID" class="control-label">Country</label>
                <input id="CountryID" name="CountryID" class="form-control" value="@Model.CountryID" />
                <span asp-validation-for="CountryID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
