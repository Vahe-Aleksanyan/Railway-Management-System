@model IEnumerable<RailwayManagementSystem.Models.Country>

@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<p>
    <a href="@Url.Action("Create")">Create New Country</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Country Name</th>
        <th>Continent</th>
        <th>Region</th>
        <th>Population</th>
        <th>Area</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var country in Model)
    {
        <tr>
            <td>@country.CountryName</td>
            <td>@country.Continent</td>
            <td>@country.Region</td>
            <td>@country.Population</td>
            <td>@country.Area</td>
            <td>
                <a href="@Url.Action("Edit", new { id = country.CountryID })">Edit</a> |
                <a href="@Url.Action("Details", new { id = country.CountryID })">Details</a> |
                <a href="@Url.Action("Delete", new { id = country.CountryID })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>