@model IEnumerable<RailwayManagementSystem.Models.Passenger>

@{
    ViewData["Title"] = "Passengers";
}

<h1>Passengers</h1>

<p>
    <a href="@Url.Action("Create")">Create New Passenger</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var passenger in Model)
    {
        <tr>
            <td>@passenger.FirstName</td>
            <td>@passenger.LastName</td>
            <td>@passenger.DateOfBirth.ToShortDateString()</td>
            <td>@passenger.Gender</td>
            <td>@passenger.Email</td>
            <td>@passenger.PhoneNumber</td>
            <td>
                <a href="@Url.Action("Edit", new { id = passenger.PassengerID })">Edit</a> |
                <a href="@Url.Action("Details", new { id = passenger.PassengerID })">Details</a> |
                <a href="@Url.Action("Delete", new { id = passenger.PassengerID })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
