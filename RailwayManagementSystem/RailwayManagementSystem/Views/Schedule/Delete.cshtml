@model RailwayManagementSystem.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<h1>Delete Schedule</h1>

<h4>Schedule</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Frequency</dt>
        <dd class="col-sm-10">@Model.Frequency</dd>

        <dt class="col-sm-2">Departure Time</dt>
        <dd class="col-sm-10">@Model.DepartureTime</dd>

        <dt class="col-sm-2">Arrival Time</dt>
        <dd class="col-sm-10">@Model.ArrivalTime</dd>

        <dt class="col-sm-2">Total Duration</dt>
        <dd class="col-sm-10">@Model.TotalDuration</dd>

        <dt class="col-sm-2">Schedule Date</dt>
        <dd class="col-sm-10">@Model.ScheduleDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Days of Operation</dt>
        <dd class="col-sm-10">@Model.DaysOfOperation</dd>

        <dt class="col-sm-2">Train Number</dt>
        <dd class="col-sm-10">@Model.TrainNumber</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Railway</dt>
        <dd class="col-sm-10">@Model.RailwayID</dd>

        <dt class="col-sm-2">Route</dt>
        <dd class="col-sm-10">@Model.RouteID</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ScheduleID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
