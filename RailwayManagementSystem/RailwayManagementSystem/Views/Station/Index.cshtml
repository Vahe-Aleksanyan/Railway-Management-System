@model IEnumerable<RailwayManagementSystem.Models.Station>

@{
    ViewData["Title"] = "Stations";
}

<h1>Stations</h1>

<p>
    <a href="@Url.Action("Create")">Create New Station</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Station Name</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Station Code</th>
        <th>Station Type</th>
        <th>Number of Platforms</th>
        <th>Facilities</th>
        <th>Operational Status</th>
        <th>City</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var station in Model)
    {
        <tr>
            <td>@station.StationName</td>
            <td>@station.Latitude</td>
            <td>@station.Longitude</td>
            <td>@station.StationCode</td>
            <td>@station.StationType</td>
            <td>@station.NumberOfPlatforms</td>
            <td>@station.Facilities</td>
            <td>@station.OperationalStatus</td>
            <td>@station.CityID</td> <!-- Replace CityID with the related City Name if needed -->
            <td>
                <a href="@Url.Action("Edit", new { id = station.StationID })">Edit</a> |
                <a href="@Url.Action("Details", new { id = station.StationID })">Details</a> |
                <a href="@Url.Action("Delete", new { id = station.StationID })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
